{% extends 'base.html.twig' %}

{% block title %}Hello EventController!
{% endblock %}

{% block body %}
	<header class="header">
		<nav class="navbar navbar-expand-lg navbar-dark bg header">
			<div class="container">
				<a class="navbar-brand" href="#">Navbar</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
					<ul class="navbar-nav header_gap">
						<li class="nav-item">
							<a class="nav-link header" href="{{ path('app_home') }}">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link header" href="#">Discover</a>
						</li>
						<li class="nav-item">
							<a class="nav-link header" href="{{ path('app_logout') }}">Logout</a>
						</li>
					</ul>
					<form class="d-flex">
						<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn" type="submit">Search</button>
					</form>
				</div>
			</div>
		</nav>
	</header>


	<section class="container_details">
		<div class="details_title">{{ events.user.pseudo }}</div>
		<img class="details_image" src={{ vich_uploader_asset(events, 'imageFile') }}>
	</section>

	<div class="card text-center">
		<div class="card-body">
			<h5 class="card-title">{{ events.name }}</h5>
			<p class="card-text">{{ events.cashprize }}</p>
			<p class="card-text">{{ events.description }}</p>
			<p>
				Start :
				{{ events.datestart | date("m/d/y")}}
			</p>
			<p>
				End :{{ events.dateend | date("m/d/y")}}
			</p>
		</div>
	</div>

{% endblock %}
