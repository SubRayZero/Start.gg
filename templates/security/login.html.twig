{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<div class="container container_form_log">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card card_black">
					<div class="card-body">
						<form class="form-signin" action="{{ path('app_login') }}" method="post">
							<h1 class="card-title text-center">Login</h1>
							<label for="inputEmail" class="sr-only">Email address</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email address" autocomplete="email" required autofocus>
							<label for="inputPassword" class="sr-only">Password</label>
							<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" autocomplete="current-password" required>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="checkbox mb-3">
								<label>
									<input type="checkbox" name="_remember_me">
									Remember me
								</label>
							</div>

							<button type="submit" class="btn button_hover">Login</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
