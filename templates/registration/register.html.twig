{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}


	<header class="header">
		<nav class="navbar navbar-expand-lg navbar-dark bg header">
			<div class="container">
				<a class="navbar-brand" href="#">Navbar</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
					<ul class="navbar-nav header_gap">
						<li class="nav-item">
							<a class="nav-link header" href="{{ path('app_home') }}">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link header" href="{{ path('app_login') }}">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link header" href="#">Discover</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
						</li>
					</ul>
					<form class="d-flex">
						<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn" type="submit">Search</button>
					</form>
				</div>
			</div>
		</nav>
	</header>


	<div class="container container_form">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card card_black">
					<div class="card-body">
						<h1 class="card-title text-center">Register</h1>
						{{ form_errors(registrationForm) }}

						{{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
						<div class="mb-3">
							{{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control', 'placeholder': 'Pseudo'}}) }}
						</div>
						<div class="mb-3">
							{{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
						</div>
						<div class="mb-3">
							{{ form_row(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
						</div>
						<div class="mb-3">
							{{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
						</div>
						<div class="mb-3">
							{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
						</div>
						<div class="mb-3 form-check">
							{{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
							<label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}"></label>
						</div>

						<button type="submit" class="btn btn-primary btn-block">Register</button>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
